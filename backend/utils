// backend/utils/identifierNormalization.js

function normalizeIdentifier(identifier, identifierType) {
  if (typeof identifier !== "string") {
    return identifier;
  }

  if (identifierType === "phone") {
    return identifier.replace(/\s+/g, "");
  }

  return identifier.trim().toLowerCase();
}

module.exports = {
  normalizeIdentifier
};
